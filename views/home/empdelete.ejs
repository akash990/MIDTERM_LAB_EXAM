			</tr>
			<tr>
			<td>Mobile :</td>
				<td><input type="text" name="mobile" value="<%=user.mobile%>"></td>
			<tr>
			
			<tr>
			
			<tr>
			
				<td>Type :</td>
				<td><input type="text" name="type" value="<%=user.type%>"></td>
			</tr>
			<tr>
				
				<td><input type="submit" name="submit" value="delete"></td>
				<td><a href="/home/adduser/showtotalemployee">Show student information</a></td>
